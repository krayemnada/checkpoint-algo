ALGORITHM checkpoint
VAR
    ch:STRING
    nbrv:INTEGER=0
    nbrw,l:INTEGER=1
    i:INTEGER=0
BEGIN
    Read(ch)
 WHILE (ch[i]<>'.') DO
        i:=i+1
        l++
        IF(ch[i]<>' ') THEN
        nbrw:=nbrw+1
        END_IF
        IF (ch[i]in['a','A','e','E','O','o','I','i','U','u','y','Y']) THEN
            nbrv:=nbrv+1
            // or nbrv++

        END_IF

    END_WHILE
    Write("the number of words is ")
END